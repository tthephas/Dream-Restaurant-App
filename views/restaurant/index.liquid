{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">All Restaurants</h2>
    <div class="row">
      {% for restaurant in restaurants %}
        <div class="card" style="width: 20rem;">
          <h5 class="card-header">{{ restaurant.name }}</h5>
          <div class="card-body">
      {% comment %}
            <h5 class="card-title">
              Cuisine: {{ restaurant.cuisine }}</br></br>
            </h5>
      {% endcomment %}

            <p class="card-text">
              Menu </br></br>

              
              {% for items in restaurant.menuItems %}
              {{ items.dishType}}
              </br>
              {{ items.dishName }}
              <span class="ms-5">{{ items.price}}$</span>
              </br></br>
              {% endfor %}

            </p>

            <p class="card-text">
              </br>Location: {{ restaurant.location }}
            </p>
            <p class="card-text">
                </br>Owner: {{ restaurant.owner.username }}
            </p>
            <a href="/restaurant/edit/{{restaurant.id}}" class="btn btn-info">
              View {{ restaurant.name }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}