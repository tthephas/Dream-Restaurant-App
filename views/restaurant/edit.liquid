{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/restaurant/{{restaurant._id}}?_method=PUT" method="POST">
      <fieldset>
        <legend>EDIT menu items
        </legend>

        <label class="form-label">Name:</label>
        <input
          type="text"
          name="name"
          placeholder="{{ restaurant.name }}"
          value="{{ restaurant.name }}"
          class="form-control"
          style="width: 36rem">

        <label class="form-label mt-3">Cuisine:</label>
        <input
        type="text"
          name="cuisine"
          placeholder="{{ restaurant.cuisine }}"
          value="{{ restaurant.cuisine }}"
          class="form-control"
          style="width: 36rem">


        {% comment %}
        Create if statement. If there is an app, entree, or dessert, list it here for editing options.
        This did not work. not populating any items.
        {% if restaurant.menuItems.dishType.length > 0 %}
        <input
        type="text"
        name="dishType"
        placeholder="{{ restaurant.menuItems.dishType }}"
        value="{{ restaurant.menuItems.dishType }}"
        class="form-control">
        </br>

        {% endif %}
        {% endcomment %}



        <label class="form-label mt-3">Menu Items:</label>


        {% for items in restaurant.menuItems %}
          <input
            type="text"
            name="dishName"
            placeholder="{{ items.dishName }}"
            value="{{ items.dishName }}"
            class="form-control"
            style="width: 36rem">

        {% endfor %}


        <label class="form-label">Location:</label>
        <input
          type="text"
          name="location"
          value="{{ restaurant.location }}"
          class="form-control"
          style="width: 36rem">

      </fieldset>

      <input type="submit" class="btn btn-success mt-4">

      <a href="/restaurant/mine" class="btn btn-warning mt-4">Back</a>
    </form>
    <form action="/restaurant/{{ restaurant.id }}?_method=DELETE" method="POST">
      <input
        type="submit"
        class="btn btn-danger mt-3"
        value="Delete"
        style="width: 9rem">
    </form>

  </div>
{% endblock %}