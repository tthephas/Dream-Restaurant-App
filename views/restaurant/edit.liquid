{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/restaurant/edit/{{ restaurant._id }}?_method=PUT" method="POST">
      <fieldset>
        <legend>EDIT Restaurant
        </legend>

        <label class="form-label">Name:</label>
        <input
          type="text"
          name="name"
          placeholder="{{ restaurant.name }}"
          value="{{ restaurant.name }}"
          class="form-control"
          style="width: 36rem">

        <label class="form-label mt-3">Cuisine:</label>
        <input
        type="text"
          name="cuisine"
          placeholder="{{ restaurant.cuisine }}"
          value="{{ restaurant.cuisine }}"
          class="form-control"
          style="width: 36rem">


        <input
          type="hidden"
          name="dishType"
          placeholder={{ restaurant.menuItems.dishType }}
          value={{ restaurant.menuItems.dishType }}
          class="form-control"
          style="width: 36rem">
        <input
          type="hidden"
          name="dishName"
          placeholder={{ restaurant.menuItems.dishName }}
          value={{ restaurant.menuItems.dishName }}
          class="form-control"
          style="width: 36rem">
        <input
          type="hidden"
          name="price"
          placeholder={{ restaurant.menuItems.price }}
          value={{ restaurant.menuItems.price }}
          class="form-control"
          style="width: 36rem">


</br> 
        <label class="form-label">Location:</label>
        <input
          type="text"
          name="location"
          value="{{ restaurant.location }}"
          class="form-control"
          style="width: 36rem">

      </fieldset>

      <input type="submit" class="btn btn-success mt-4">
      <a href="/restaurant/mine" class="btn btn-warning mt-4">Back</a>
    </form>
    <form action="/restaurant/edit/{{ restaurant.id }}?_method=DELETE" method="POST">
      <input
        type="submit"
        class="btn btn-danger mt-3"
        value="Delete"
        style="width: 9rem">
    </form>

  </div>
{% endblock %}