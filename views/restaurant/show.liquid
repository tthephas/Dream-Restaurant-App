{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ restaurant.name }} -
            {% if restaurant.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Cuisine: {{ restaurant.cuisine }}</h3>
        <h6>Menu: {{ restaurant.menu }}</h6>
        {% if restaurant.owner == userId %}
        <div class="btn-group">

            <a href="/restaurant/{{ restaurant.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/restaurant/{{ restaurant.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}