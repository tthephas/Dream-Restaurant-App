{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">My SHOW PAGE - ADD MENU ITEMS</h2>
    <div class="row">
      <div class="card ms-5 mb-3" style="width: 30rem; border:3px solid black; background-color:rgb(235, 233, 233)">
        <h5 class="card-header" style="text-align:center">{{ restaurant.name }}</h5>
        <div class="card-body">
          <p class="card-text" style="font-style: italic; text-align:center">
            </br>Location: {{ restaurant.location }}
            </p>
            <p class="card-text" style="font-weight: bold; text-align:center">
              </br>Owner: {{ restaurant.owner.username }}
            </p>
        </div>
      </div>
      <div class="card ms-5 mb-3" style="width: 30rem; border:3px solid black; background-color:rgb(235, 233, 233)">
        <form action="/restaurant/{{restaurant._id}}?_method=PUT" method="POST">
        <fieldset>

          <label class="form-label" style="text-align:center">ADD Menu Items:</label></br>
            <select name="dishType">
              <option value="Appetizer">Appetizer</option>
              <option value="Entree">Entree</option>
              <option value="Dessert">Dessert</option>
            </select>
            <input
              type="text"
              name="dishName"
              placeholder="name of dish"
              class="form-control mt-2">
            <input
              type="number"
              name="price"
              placeholder="price of dish"
              class="form-control">
            <input 
              type="submit" 
              class="btn btn-success mt-2 mb-2"
              value="submit">
              
        </fieldset>
        </form>
      </div>
      <div></div>
        {% for items in restaurant.menuItems %}
          <div class="card ms-5 mb-3" style="width: 17rem; border:3px solid black; background-color:rgb(235, 233, 233); text-align:center">
              Menu Item</br></br> 
                  <span style="font-style:italic">
                    {{ items.dishType }}

                  </span>
                  <span style="font-weight:bold">
                    {{ items.dishName }}

                  </span>
              
              <span>{{ items.price}}$</span>
              </br></br>
          </div>
        {% endfor %}
    </div>
  </div>

{% endblock %}