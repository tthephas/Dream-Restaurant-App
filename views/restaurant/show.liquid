{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">My Favorite Restaurants</h2>
    <div class="row">
      {% for restaurant in restaurants %}
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ restaurant.name }}</h5>
          <div class="card-body">
            <h5 class="card-title">
              Cuisine: {{ restaurant.cuisine }}</br></br>
            </h5>
            <p class="card-text">
              Menu </br></br>

              {% for items in restaurant.menuItems %}
              {{ items.dishType}}
              </br>
              {{ items.dishName }}
              <span class="ms-5">{{ items.price}}$</span>
              </br></br>
              {% endfor %}

            </p>
            <p class="card-text">
              </br>Location: {{ restaurant.location }}
            </p>
            <p class="card-text">
                </br>Owner: {{ restaurant.owner.username }}
            </p>
            <a href="/restaurant/edit/{{ restaurant.id }}" class="btn btn-info">
              Edit 
            </a>
            <form action="/restaurant/{{ restaurant.id }}?_method=DELETE" method="POST">
            <input 
                type="submit" 
                class="btn btn-danger" 
                value="Delete">
            </form>
        

          </div>

        </div>
      {% endfor %}


    </div>
  </div>
{% endblock %}