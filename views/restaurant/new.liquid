{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/restaurant" method="POST">
      <fieldset>
        <legend>Create New Restaurant</legend>
        <label class="form-label">Name:</label>
        <input
          type="text"
          name="name"
          placeholder="restaurant name"
          class="form-control">
        <label class="form-label">Cuisine:</label>
        <input
          type="text"
          name="cuisine"
          placeholder="restaurant cuisine (ex: Sushi, Italian, American, etc)"
          class="form-control">
          </br>
        <label class="form-label">Menu Items:</label></br>

        <select name="dishType">
          <option value="Appetizer">Appetizer</option>
          <option value="Entree">Entree</option>
          <option value="Dessert">Dessert</option>
          <a>
            <input
            type="text"
            name="dishType"
            placeholder="type of dish"
            class="form-control">
          </a>
          <a>
            <input
            type="text"
            name="dishName"
            placeholder="name of dish"
            class="form-control">
          </a>
          <a>
            <input
            type="text"
            name="price"
            placeholder="price of dish"
            class="form-control">
          </a>
        </select></br>

        </br>
        <label class="form-label">Location:</label>
        <input
          type="text"
          name="location"
          placeholder="city, state (or country)"
          class="form-control">

      </fieldset>
      <input
        type="submit"
        value="Create New Restaurant"
        class="btn btn-success mt-3">
    </form>
  </div>
{% endblock %}